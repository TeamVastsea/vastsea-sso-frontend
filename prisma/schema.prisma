generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  // 来自redis的全局计数器
  id          BigInt @id
  email       String
  password    String
  createAt    DateTime  @default(now())
  updateAt    DateTime  @updatedAt
  salt        String
  iterations  Int

  active    Boolean @default(true)

  profile Profile?
  role    Role[]
}


model Profile {
  id        String  @id @default(uuid())
  nick      String
  desc      String?
  avatar    String?
  account   Account @relation(fields: [accountid], references: [id])
  accountid BigInt  @unique
}

model Client {
  id            BigInt  @id 
  name          String
  clientId      String
  clientSecret  String
  redirect      String

  @@index([name,clientId])
}

model Permission {
  id        BigInt  @id
  name      String
  desc      String
  clientId  String?
  role      Role[]
  @@index([name, clientId])
}

model Role {
  id         BigInt  @id
  name       String
  desc       String
  clientId   String?
  parents    Role[] @relation("roles")
  children   Role[] @relation("roles")
  account    Account[]
  permission Permission[]
  deleted    Boolean @default(false)

  @@index([id, desc, clientId, deleted])
}